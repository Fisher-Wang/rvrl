{
    // Python interpreter (change this to your own path)
    "python.defaultInterpreterPath": "/home/ghr/fs/miniforge3/envs/rvrl/bin/python",

    // Formatting
    "[python]": {
        "editor.tabSize": 4,
        "editor.defaultFormatter": "charliermarsh.ruff",
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.organizeImports": "explicit"
        },
    },
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "files.trimTrailingWhitespace": true,
    "editor.rulers": [120],

    // Linting
    "ruff.lint.enable": true,

    // Exclude
    "files.exclude": {
        "**/__pycache__": true,
        "**/.ruff_cache": true,
        "**/*.egg-info": true,
        "build": true,
    },
    "search.exclude": {
        "logdir": true,
    },

    // Python extra paths
    "cursorpyright.analysis.extraPaths": [
        /* IssacLab */
        "${workspaceFolder}/third_party/IsaacLab/source/isaaclab",
        "${workspaceFolder}/third_party/IsaacLab/source/isaaclab_assets",
        "${workspaceFolder}/third_party/IsaacLab/source/isaaclab_mimic",
        "${workspaceFolder}/third_party/IsaacLab/source/isaaclab_rl",
        "${workspaceFolder}/third_party/IsaacLab/source/isaaclab_tasks",
        /* IsaacGymEnvs */
        "${workspaceFolder}/third_party/IsaacGymEnvs",
    ],
}
