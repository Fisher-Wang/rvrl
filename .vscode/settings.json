{
    // Python interpreter (change this to your own path)
    "python.defaultInterpreterPath": "${HOME}/miniforge3/envs/cleanrl/bin/python",

    // Formatting
    "[python]": {
        "editor.tabSize": 4,
        "editor.defaultFormatter": "charliermarsh.ruff",
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.organizeImports": "explicit"
        },
    },
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "files.trimTrailingWhitespace": true,
    "editor.rulers": [120],

    // Linting
    "ruff.lint.enable": true,

    // Python extra paths
    "python.analysis.extraPaths": [
        /* IssacLab */
        "${workspaceFolder}/third_party/IsaacLab/source/isaaclab",
        "${workspaceFolder}/third_party/IsaacLab/source/isaaclab_assets",
        "${workspaceFolder}/third_party/IsaacLab/source/isaaclab_mimic",
        "${workspaceFolder}/third_party/IsaacLab/source/isaaclab_rl",
        "${workspaceFolder}/third_party/IsaacLab/source/isaaclab_tasks",
    ],
}
